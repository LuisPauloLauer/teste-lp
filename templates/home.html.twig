{% extends 'layout/design.html.twig' %}

{% block content %}
    <div class="container py-3">
        <header>
            <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom">
                <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
                    <span class="fs-4">Test Hash Generate</span>
                </a>

                <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
                    <a class="me-3 py-2 text-dark text-decoration-none" href="#">Home</a>
                    <a class="me-3 py-2 text-dark text-decoration-none" href="#">About</a>
                    <a class="me-3 py-2 text-dark text-decoration-none" href="#">Instructions</a>
                </nav>
            </div>

            <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
                <h1 class="display-4 fw-normal">Test Hash Generate</h1>
                <p class="fs-5 text-muted">
                    Desafio Programador PHP
                </p>
            </div>
        </header>

        <main>
            <div class="row row-cols-1 row-cols-md-12 mb-3 text-center">
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">Generate Hash code</h4>
                        </div>
                        <div class="card-body">
                            <div class="container align-self-center">
                                <form action="{{ path('app_dohash') }}" name="formHash" method="post">
                                    <div class="form-row mb-3">
                                        <div class="col ">
                                            <label for="inputTextHash">insert text to generate hash:</label>
                                            <input type="text" class="form-control" id="idtexthash"  name="texthash" autofocus placeholder="text of hash">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col">
                                            <button class="btn btn-primary btn-lg btn-block" type="submit" value="Submit">Generate to hash</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <h2 class="display-6 text-center mb-4">List Hash</h2>

            <div class="table-responsive">
                <table id="listhash" class="table table-bordered table-striped text-center">
                    <thead>
                    <tr>
                        <th>Batch</th>
                        <th>N° do bloco</th>
                        <th>String de entrada</th>
                        <th>Chave encontrada</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for hash in listHash %}
                    <tr>
                        <td>{{ hash.batch|format_datetime('short', 'medium', locale='en') }}</td>
                        <td>{{ hash.getNBloco }}</td>
                        <td>{{ hash.getInputString }}</td>
                        <td>{{ hash.getKey }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Batch</th>
                        <th>N° do bloco</th>
                        <th>String de entrada</th>
                        <th>Chave encontrada</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </main>

        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <div class="row">
            </div>
        </footer>
    </div>
{% endblock %}
